<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_b"
    android:orientation="vertical"
    tools:context=".fragments.HomeFragment03">

    <!-- TODO: Update blank fragment layout -->
    <include layout="@layout/layout_header_with_back_img" />

    <com.handmark.pulltorefresh.library.PullToRefreshScrollView
        android:id="@+id/ll_find_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/smssdk_white"
        android:dividerHeight="5dp"
        android:dividerPadding="2dip">

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#a0ffffff"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/ll_find_grounp"
                android:layout_width="match_parent"
                android:layout_height="60dip"
                android:layout_marginTop="10dip"
                android:background="@color/white"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp">

                <ImageView
                    android:id="@+id/icon_grounp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="5dip"
                    android:src="@mipmap/icon_circle_grounp" />

                <TextView
                    android:id="@+id/grounp_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toEndOf="@+id/icon_grounp"
                    android:layout_toRightOf="@+id/icon_grounp"
                    android:text="群组"
                    android:textColor="@color/defualt_textcolor_c"
                    android:textSize="14sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@+id/icon_grounp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/line_color" />

            <RelativeLayout
                android:id="@+id/ll_find_new_friend"
                android:layout_width="match_parent"
                android:layout_height="60dip"
                android:background="@color/white"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dip">

                <ImageView
                    android:id="@+id/new_friend_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="5dip"
                    android:src="@mipmap/icon_circle_new_friend" />

                <TextView
                    android:id="@+id/new_friend_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toEndOf="@+id/new_friend_code"
                    android:layout_toRightOf="@+id/new_friend_code"
                    android:text="新朋友"
                    android:textColor="@color/defualt_textcolor_c"
                    android:textSize="14sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@+id/icon_grounp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/line_color" />

            <RelativeLayout
                android:id="@+id/ll_find_friend"
                android:layout_width="match_parent"
                android:layout_height="60dip"
                android:background="@color/white"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp">

                <ImageView
                    android:id="@+id/icon_friend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="5dp"
                    android:src="@mipmap/icon_circle_friend" />

                <TextView
                    android:id="@+id/friend_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/icon_friend"
                    android:text="好友"
                    android:textColor="@color/defualt_textcolor_c"
                    android:textSize="14sp" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@+id/friend_tv"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/line_color" />

            <RelativeLayout
                android:id="@+id/ll_find_kefu"
                android:layout_width="match_parent"
                android:layout_height="60dip"
                android:layout_marginTop="10dip"
                android:background="@color/white"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp">

                <ImageView
                    android:id="@+id/icon_kefu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="5dp"
                    android:src="@mipmap/icon_circle_kefu" />

                <TextView
                    android:id="@+id/kefu_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/icon_kefu"
                    android:text="客服"
                    android:textColor="@color/defualt_textcolor_c"
                    android:textSize="14sp" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@+id/icon_kefu"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/line_color" />

            <RelativeLayout
                android:id="@+id/ll_find_serve"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/kefu_tv"
                android:background="@color/white"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp">

                <ImageView
                    android:id="@+id/icon_serve"
                    android:layout_width="wrap_content"
                    android:layout_height="60dip"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="5dp"
                    android:src="@mipmap/icon_circle_serve" />

                <TextView
                    android:id="@+id/serve_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/icon_serve"
                    android:text="服务一条龙"
                    android:textColor="@color/defualt_textcolor_c"
                    android:textSize="14sp" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@+id/icon_serve"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/line_color" />
        </LinearLayout>

    </com.handmark.pulltorefresh.library.PullToRefreshScrollView>
</LinearLayout>
