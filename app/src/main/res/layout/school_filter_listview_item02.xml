<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/school_filter_items_tvName"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:gravity="center_vertical"
        android:paddingEnd="10dip"
        android:paddingStart="10dip"
        android:text="XXXXX" />

    <com.likeit.a51scholarship.view.GridViewForScrollView
        android:id="@+id/school_filter_items_GridView"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:horizontalSpacing="10dip"
        android:numColumns="4"
        android:paddingEnd="10dip"
        android:paddingStart="10dip"
        android:paddingBottom="10dip"
        android:verticalSpacing="10dip"></com.likeit.a51scholarship.view.GridViewForScrollView>


</LinearLayout>
