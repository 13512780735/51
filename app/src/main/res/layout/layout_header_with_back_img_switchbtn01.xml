<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_header"
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:background="@color/header_bg_color"
    android:orientation="vertical">

    <View
        android:id="@+id/header_line"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/bgcolor" />

    <ImageView
        android:id="@+id/iv_header_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:padding="5dip" />

    <LinearLayout
        android:layout_width="120dip"
        android:layout_height="25dip"
        android:layout_centerInParent="true"
        android:background="@drawable/switchbtn_blue_bg"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_head_chat"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/switchbtn01_blue_bg"
            android:text="问题"
            android:textColor="@color/white"

            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_head_chat"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="问题"
            android:textColor="@color/login_btn_bg_color"
            android:visibility="gone" />

        <Button
            android:id="@+id/bt_head_notice"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/switchbtn01_blue_bg"
            android:text="学长"
            android:textColor="@color/white"
            android:textSize="14sp"

            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_head_notice"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="学长"
            android:textColor="@color/login_btn_bg_color" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dip"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_header_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/iv_header_right01"
            android:src="@mipmap/icon_issue"
            android:padding="5dip"
            />
        <ImageView
            android:id="@+id/iv_header_right01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/nav_icon_search_sel"
            android:padding="5dip"
            />
    </LinearLayout>


</RelativeLayout>