<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">
  <FrameLayout
      android:id="@+id/live_list_item_bg"
      android:layout_width="match_parent"
      android:layout_height="180dip"
      android:background="@mipmap/test01">
      <FrameLayout
          android:layout_width="match_parent"
          android:layout_height="180dip"
          android:background="@mipmap/black_bg">
      <Button
          android:layout_width="wrap_content"
          android:layout_height="30dip"
          android:textColor="@color/white"
          android:text="预约"
          android:layout_marginEnd="10dip"
          android:layout_gravity="end"
          android:textSize="14sp"
          android:background="@mipmap/btn_live_bg"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">
        <TextView
            android:id="@+id/live_list_item_result_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:padding="10dip"
            android:textColor="@color/white"
            android:text="就读迈阿密大学是怎样的一种体验"/>
        <TextView
            android:id="@+id/live_list_item_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:padding="10dip"
            android:text="2017年02月04日 17:00-18:00"/>
    </LinearLayout>
      </FrameLayout>
  </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dip">
        <FrameLayout
            android:layout_width="@dimen/width60"
            android:layout_height="@dimen/width60"
            >

            <com.likeit.a51scholarship.view.CircleImageView
                android:id="@+id/iv_live_avatar"
                android:layout_width="@dimen/width60"
                android:layout_height="@dimen/width60"
                android:src="@mipmap/message_chat_avatar" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent">

                <ImageView
                    android:id="@+id/iv_message_chat_v1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/message_chat_v1" />

            </RelativeLayout>
        </FrameLayout>
        <LinearLayout
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="0dip"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/live_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dip"
                    android:layout_height="wrap_content"
                    android:text="Lana"
                    android:textSize="16sp"/>
                <Button
                    android:id="@+id/live_stats_tv"
                    android:layout_width="50dip"
                    android:layout_height="20dip"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dip"
                    android:layout_toRightOf="@+id/live_name_tv"
                    android:background="@drawable/btn_blue_bg02"
                    android:textSize="10sp"
                    android:text="在读"
                    android:textColor="@color/white"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="0dip"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/live_school_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dip"
                    android:layout_height="wrap_content"
                    android:textColor="@color/defualt_textcolor_c"
                    android:visibility="gone"
                    android:text="迈阿密大学"/>
                <TextView
                    android:id="@+id/live_speciality_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dip"
                    android:layout_toRightOf="@+id/live_school_name_tv"
                    android:text="迈阿密大学 金融专业"
                    android:textColor="@color/defualt_textcolor_c"
                    />
            </RelativeLayout>
        </LinearLayout>
        <Button
            android:layout_width="100dip"
            android:layout_height="30dip"
            android:text="免费"
            android:background="@drawable/button_blue_bg"
            android:textSize="14sp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/login_btn_bg_color"/>
    </LinearLayout>
</LinearLayout>
