<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.likeit.a51scholarship.activitys.SchoolFilterActivity">

    <include layout="@layout/layout_header_with_back" />


    <ListView
        android:id="@+id/school_filter_listview"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:background="@color/white"
        android:padding="10dip"></ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_reset"
            android:layout_width="100dip"
            android:layout_height="match_parent"
            android:background="@color/login_btn_bg_color"
            android:gravity="center"
            android:text="重置"
            android:textColor="@color/white" />

        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="@color/line_color"></View>

        <TextView
            android:id="@+id/tv_totle"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/login_btn_bg_color"
            android:gravity="center"
            android:text="共167个高校符合条件>>"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>
