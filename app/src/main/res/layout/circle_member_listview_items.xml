<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dip"
    android:orientation="horizontal">
        <FrameLayout
            android:layout_width="@dimen/width60"
            android:layout_height="@dimen/width60"
            android:layout_margin="10dip">

            <com.likeit.a51scholarship.view.CircleImageView
                android:id="@+id/circle_member_avatar"
                android:layout_width="@dimen/width60"
                android:layout_height="@dimen/width60"
                android:src="@mipmap/message_chat_avatar" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent">

                <ImageView
                    android:id="@+id/circle_member_v1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/message_chat_v1" />
            </RelativeLayout>
        </FrameLayout>


        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_margin="10dip"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/circle_member_name"
                android:layout_width="wrap_content"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="风中的小鸟"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_add_friend"
            android:layout_width="80dip"
            android:layout_height="30dip"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dip"
            android:background="@drawable/button_drak02_bg"
            android:textColor="@color/login_btn_bg_color"
            android:text="加好友"/>

</LinearLayout>
