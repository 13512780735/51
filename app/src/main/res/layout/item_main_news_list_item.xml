<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="@color/white">


    <ImageView
        android:id="@+id/news_img"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:layout_marginRight="10dp"/>

    <TextView
        android:id="@+id/news_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/news_img"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/news_img"
        android:ellipsize="end"
        android:maxLines="2"
        android:paddingRight="10dp"
        android:text="开尔文大学2017年奖学金助学news-中国政府资助"
        android:textColor="@color/color_333"
        android:textSize="14sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingRight="10dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/news_img"
        android:layout_toStartOf="@+id/news_img"
        android:layout_marginRight="92dp"
        android:layout_marginEnd="92dp"
        android:layout_marginTop="132dp">

        <TextView
            android:id="@+id/circle_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="留学圈"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/read_num_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="阅读数123"
            android:textColor="@color/color_999"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/time_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="20分钟前"
            android:textColor="@color/color_999"
            android:textSize="12sp"/>

        <ImageView
            android:id="@+id/comment_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/btn_comment"/>

        <TextView
            android:id="@+id/comment_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="20"
            android:textColor="@color/color_999"
            android:layout_marginLeft="5dp"
            android:textSize="12sp"/>

        <ImageView
            android:id="@+id/more_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/icon_more"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/line_color"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>